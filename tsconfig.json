{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "strict": true,
    "noEmit": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": true
  },
  "include": ["src/fastify/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}